<Window x:Class="revit_llm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:revit_llm"
        mc:Ignorable="d"
        Title="FamJam" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="Root Folder: "/>
            <TextBox x:Name="txtRootFolder"/>
            <Button Width="100" Height="25" Content="Generate" Margin="0,30,0,0" HorizontalAlignment="Center" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
